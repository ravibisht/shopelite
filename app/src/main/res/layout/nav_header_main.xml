<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="176dp"
    android:background="@color/main_color"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/nav_header_user_profile_picture"
        android:elevation="4dp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:paddingTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/nav_header_username"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_default_user" />

    <TextView
        android:id="@+id/nav_header_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:text="Not Signed In"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nav_header_user_profile_picture"
        tools:layout_editor_absoluteY="97dp" />

    <TextView
        android:id="@+id/nav_header_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email address"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nav_header_username"
        app:layout_constraintVertical_bias="0.058" />

    <ImageView
        android:id="@+id/nav_header_add_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:elevation="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/nav_header_user_profile_picture"
        app:layout_constraintStart_toStartOf="@+id/nav_header_user_profile_picture"
        app:layout_constraintTop_toBottomOf="@+id/nav_header_email"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/ic_add_profile" />
</androidx.constraintlayout.widget.ConstraintLayout>